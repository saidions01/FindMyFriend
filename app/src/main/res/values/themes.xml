<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - TrueCaller Light Blue Style -->
    <style name="Theme.FindMyFriend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - Light Blue -->
        <item name="colorPrimary">@color/light_blue_primary</item>
        <item name="colorPrimaryVariant">@color/light_blue_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_accent</item>
        <item name="colorSecondaryVariant">@color/light_blue_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_blue_background</item>
        <item name="colorSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue_primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>